type adaptiverated, domain;
type adaptiverated_exec, exec_type, vendor_file_type, file_type;

init_daemon_domain(adaptiverated)

# Allow read access to input devices for touch monitoring
allow adaptiverated input_device:chr_file r_file_perms;

# Allow binder interactions with surfaceflinger for display mode changes
allow adaptiverated surfaceflinger_service:service_manager find;
binder_use(adaptiverated)
binder_call(adaptiverated, surfaceflinger)

# Allow writing to logcat
allow adaptiverated logd_socket:sock_file write;
allow adaptiverated logd:unix_dgram_socket sendto;

# Allow capability for nice priority adjustment
allow adaptiverated self:capability sys_nice;
